<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_notification"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/btn_wrong"
            android:layout_width="@dimen/dp_4"
            android:layout_height="match_parent"
            android:background="@drawable/bg_button_notification_wrong">
        </FrameLayout>


        <LinearLayout
            android:id="@+id/btn_show"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp_8">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/notification_info_title"
                android:textColor="@color/gray_60"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/notification_info_message"
                android:textColor="@color/gray_60" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/btn_correct"
            android:layout_width="@dimen/dp_4"
            android:layout_height="match_parent"
            android:background="@drawable/bg_button_notification_correct"
            android:orientation="vertical">
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
